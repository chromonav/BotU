<div class="chat_window">
    <div class="top_menu">
        <div class="buttons">
            <div class="button close"></div>
            <div class="button minimize"></div>
            <div class="button maximize"></div>
        </div>
        <div class="title">UBot</div>
    </div>
    <ul class="messages">
       <li class="message left appeared">
            <div class="avatar"></div>
            <div class="text_wrapper">
                <div class="text">Hello {{name}}! I am your store keeper.<br/>Where are you now?</div>
            </div>
        </li>
    </ul>
    <div class="bottom_wrapper clearfix">
        <div class="message_input_wrapper"><input class="message_input" placeholder="Type your message here..."></div>
        <div class="send_message">
            <div class="icon"></div>
            <a class="text" id="send">Send</a>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/chat.js">